---
import type { Props } from "@astrojs/starlight/props";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Default from "@astrojs/starlight/components/PageSidebar.astro";
import GlueckkanjaLogo from "../assets/sponsors/glueckkanja_logo.svg";
---

<Default {...Astro.props}>
  <slot />
</Default>

<div class="sponsors-container">
  <h2 class="sponsors-heading">Our Sponsors <span class="heart">❤️</span></h2>

  <div class="sponsor-logo">
    <a
      href="https://www.glueckkanja.com"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image
        src={GlueckkanjaLogo}
        alt="glueckkanja"
        width={150}
        height={50}
        class="white-bg"
      />
    </a>
  </div>

  <button class="sponsor-logo become-sponsor-btn" id="openModalBtnSidebar">
    <Icon name="mdi:plus-circle" class="plus-icon" />
    <span>Become a Sponsor</span>
  </button>
</div>

<div class="modal" id="sponsorModalSidebar">
  <div class="modal-content">
    <h3>Become a Sponsor</h3>
    <p>
      Support the Intune Mac Admins Community and empower IT professionals with
      free, in-depth macOS management resources. Your sponsorship covers server
      costs and fuels new features, allowing us to continue delivering valuable
      content and tools for everyone.
    </p>
    <h4>Interested in sponsoring? Reach out today!</h4>
    <div class="contact-menu">
      <a
        href="https://x.com/ugurkocde"
        class="contact-item"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="ri:twitter-x-fill" /> X
      </a>
      <a
        href="https://www.linkedin.com/in/ugurkocde/"
        class="contact-item"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="mdi:linkedin" /> LinkedIn
      </a>
    </div>
    <button class="close-modal" id="closeModalBtnSidebar">&times;</button>
  </div>
</div>

<style>
  .become-sponsor-btn {
    background-color: #ffffff;
    border: none;
    color: #3498db;
    cursor: pointer;
    transition: color 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .become-sponsor-btn:hover {
    color: #2980b9;
  }

  .plus-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .become-sponsor-btn span {
    font-size: 0.9rem;
    font-weight: bold;
  }

  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .modal-content {
    background-color: #2c3e50;
    margin: 15% auto;
    padding: 2rem;
    border-radius: 8px;
    width: 80%;
    max-width: 600px;
    position: relative;
    color: #ffffff;
  }

  .close-modal {
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 28px;
    font-weight: bold;
    background: none;
    border: none;
    color: #ffffff;
    cursor: pointer;
  }

  .contact-menu {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background-color: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    text-decoration: none;
    border-radius: 20px;
    transition: background-color 0.2s;
  }

  .contact-item:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }

  .sponsors-container {
    position: relative; /* Keep fixed to pin to bottom */
    bottom: 0;
    left: 0;
    width: var(--sl-sidebar-width);
    background-color: var(--sl-color-bg);
    z-index: 10;
  }

  .sponsors-heading {
    margin-left: 1rem;
    margin-bottom: 1rem;
    color: white;
  }

  .sponsor-logo {
    margin-left: 1rem;
    margin-bottom: 1rem;
    background-color: #ffffff;
    border-radius: 12px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 200px;
    height: 70px;
    text-decoration: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .sponsor-logo:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .white-bg {
    background-color: white;
    display: block; /* Ensure the image is treated as a block element */
    margin: 0 auto; /* Center the image horizontally */
  }

  @media (max-width: 1160px) {
    .sponsors-heading,
    .sponsor-logo {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("sponsorModalSidebar");
    const openModalBtn = document.getElementById("openModalBtnSidebar");
    const closeModalBtn = document.getElementById("closeModalBtnSidebar");

    if (openModalBtn) {
      openModalBtn.addEventListener("click", () => {
        if (modal) {
          modal.style.display = "block";
        }
      });
    }

    if (closeModalBtn) {
      closeModalBtn.addEventListener("click", () => {
        if (modal) {
          modal.style.display = "none";
        }
      });
    }

    window.addEventListener("click", (event) => {
      if (event.target === modal && modal) {
        modal.style.display = "none";
      }
    });
  });
</script>
